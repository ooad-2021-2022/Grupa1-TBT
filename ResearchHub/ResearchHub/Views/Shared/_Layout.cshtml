<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResearchHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<style>
    body{
        background-color: #d2f6f6;
        color:darkblue;
        justify-content: center
    }
    footer{
        background-color:white;
    }
</style>
<body>
    <header style="background-color:white">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-white border-bottom box-shadow mb-3" style="color:darkblue;background-color:white">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="ResearchPaper" asp-action="Index">ResearchHub</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style = "color: darkblue"  asp-area="" asp-controller="ResearchPaper" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Registered user") || User.IsInRole("VIP User"))
                            {
                                <l class="nav-item">
                                    <a  class="nav-link " style = "color: darkblue" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                                </l>
                                <li class="nav-item">
                                    <a class="nav-link" style = "color: darkblue" asp-area="" asp-controller="ResearchPaper" asp-action="Create">New paper</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " style = "color: darkblue" asp-area="" asp-controller="Collaborations" asp-action="Index">Collaborate</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style = "color: darkblue" asp-area="" asp-controller="User" asp-action="DailyReport">Daily report</a>
                                </li>
                            
                            }


                            @if (User.IsInRole("VIP User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" style = "color: darkblue" asp-area="" asp-controller="User" asp-action="Index">Go to coffee</a>
                                </li>
                            }
                            @if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="DeleteAccounts">Delete accounts</a>
                                </li>
                            }

                            @if (User.IsInRole("Moderator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="ReportProblem">Report problem</a>
                                </li>
                            }
                            
                        }
                        
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="justify-content:center">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ResearchHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
