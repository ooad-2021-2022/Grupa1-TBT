@model ResearchHub.Models.Quiz


@{
    ViewData["Title"] = "Edit";
}
<style>
    body{
        background-color: #d2f6f6;
    }
    div{
        background-color: #edfbfb;
    }
</style>

<h1>Edit</h1>

<h4>Quiz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="numberOfCorrectAnswers" class="control-label"></label>
                <input asp-for="numberOfCorrectAnswers" class="form-control" />
                <span asp-validation-for="numberOfCorrectAnswers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="minimumScoreNeeded" class="control-label"></label>
                <input asp-for="minimumScoreNeeded" class="form-control" />
                <span asp-validation-for="minimumScoreNeeded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pointsPerQuestion" class="control-label"></label>
                <input asp-for="pointsPerQuestion" class="form-control" />
                <span asp-validation-for="pointsPerQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="researchPaperID" class="control-label"></label>
                <select asp-for="researchPaperID" class="form-control" asp-items="ViewBag.researchPaperID"></select>
                <span asp-validation-for="researchPaperID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
